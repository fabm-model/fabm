# Set options for the GNU Fortran 95 compiler
ifeq ($(FORTRAN_COMPILER),GFORTRAN)
FC=gfortran
DEFINES += -DFORTRAN95
DEFINES += -D_ISO_TR_15581_
can_do_F90=true
F90_to_f90=
MODULES=-M $(MODDIR)
EXTRAS = -ffree-form -Wall -std=f95 -pedantic
EXTRAS = -ffree-form -Wall -std=gnu
DEBUG_FLAGS = -g 
PROF_FLAGS  = -p
PROD_FLAGS  = -O3
DEFINES += -DREAL_4B=real\(4\)
endif
