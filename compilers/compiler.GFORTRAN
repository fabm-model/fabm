# Set options for the GNU Fortran 95 compiler
ifeq ($(FORTRAN_COMPILER),GFORTRAN)
FC=gfortran
DEFINES += -DFORTRAN95
DEFINES += -D_ISO_TR_15581_
can_do_F90=true
F90_to_f90=
MODULES=-J$(MODDIR)
EXTRAS = -ffree-form -Wall -std=f95 -pedantic -ffree-line-length-none
EXTRAS = -ffree-form -Wall -std=gnu -ffree-line-length-none
DEBUG_FLAGS = -g 
PROF_FLAGS  = -p
PROD_FLAGS  = -O3
DEFINES += -DREAL_4B=real\(4\)
endif
